<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.signaling.activity.productsList">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/shopsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="325dp"/>

        <Button
            android:id="@+id/sortprice"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="217dp"
            android:layout_marginBottom="360dp"
            android:text="Sort by PRICE" />
        <Button
            android:id="@+id/sortdistance"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="223dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="360dp"
            android:text="Sort by DISTANCE" />

        <Button
            android:id="@+id/cart"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="223dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="600dp"
            android:text="VIEW CART" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="57dp"
            android:text="Product Name: "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvnameP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="70dp"
            android:text="TextView"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="57dp"
            android:text="Product Description: "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvdescriptionP"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="57dp"
            android:text="TextView"
            android:textSize="20dp"/>



    </RelativeLayout>
</LinearLayout>